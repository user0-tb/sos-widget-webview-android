<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SOSWidgetWebView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SOSWidgetWebView.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SOSWidgetWebViewWebView.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/SOSWidgetWebView.AlertDialogStyle</item>

        <!--Background dim-->
        <item name="android:backgroundDimAmount">0.7</item>

        <!--Background-->
        <item name="android:background">@android:color/white</item>

        <!--Shape appearance-->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.SmallComponent
        </item>

        <!--Item RadioButton or CheckBox color-->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#446BEA</item>

        <!--Positive button style-->
        <item name="buttonBarPositiveButtonStyle">@style/SOSWidgetWebView.Alert.Button.Positive
        </item>

        <!--Negative button style-->
        <item name="buttonBarNegativeButtonStyle">@style/SOSWidgetWebView.Alert.Button.Negative
        </item>

        <!--Negative button style-->
        <item name="buttonBarNeutralButtonStyle">@style/SOSWidgetWebView.Alert.Button.Neutral</item>

        <!--Padding-->
        <item name="listPreferredItemPaddingLeft">24dp</item>
        <item name="listPreferredItemPaddingRight">24dp</item>

        <item name="materialAlertDialogTitleTextStyle">@style/SOSWidgetWebView.Alert.TitleText
        </item>

        <item name="materialAlertDialogBodyTextStyle">@style/SOSWidgetWebView.Alert.BodyText</item>

        <!--Size-->
        <!--<item name="windowMinWidthMinor">95%</item>-->
        <!--<item name="windowMinWidthMajor">95%</item>-->
        <!--<item name="android:windowMinWidthMajor">95%</item>-->
        <!--<item name="android:windowMinWidthMinor">95%</item>-->
    </style>

    <style name="SOSWidgetWebView.AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>

    <style name="SOSWidgetWebView.Alert.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/SOSWidgetWebView.Alert.TitleTextAppearance</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SOSWidgetWebView.Alert.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textAppearance">@style/SOSWidgetWebView.Alert.BodyTextAppearance</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SOSWidgetWebView.Alert.TitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SOSWidgetWebView.Alert.BodyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SOSWidgetWebView.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#446BEA</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/darker_gray</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SOSWidgetWebView.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#909399</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/darker_gray</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SOSWidgetWebView.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/darker_gray</item>

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

</resources>